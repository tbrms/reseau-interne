#!/bin/sh
start()
{
     # Mettez ici le dÃ©marrage de votre programme
	sudo touch /home/xxx/server.log
	sudo echo `date` `hostname`: [START] >> server.log
	
}

stop()
{
     # Mettez ici un kill sur votre programme
	sudo touch /home/xxx/server.log
	sudo echo `date` `hostname`: [STOP] >> server.log
}

restart()
{
    stop;
    sleep 1;
    start;
}
case $1 in
start) 
      start;;
stop)
      stop;;
restart)
      restart;;
*)
      start;;
esac

exit 0
